<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/aperson_ll"
    tools:context=".activity.APersonActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:cardElevation="@dimen/dp_5"
        android:layout_height="@dimen/dp_44">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/aperson_back"
                android:src="@mipmap/back_white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:layout_gravity="center"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_16"
                />

        </android.support.v7.widget.Toolbar>
    </android.support.v7.widget.CardView>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="获取途径"
    android:textColor="@color/c_666666"
    android:textSize="@dimen/sp_12"
    android:layout_marginTop="@dimen/sp_12"
    android:layout_marginLeft="@dimen/sp_12"
    />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        app:cardElevation="@dimen/dp_8"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:id="@+id/aperson_touxiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"
                />

            <ImageView
                android:id="@+id/aperson_photo"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@mipmap/zhanweitu_home_kapian_hdpi"

                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f0f0f0"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_14"
            />
        <RelativeLayout
            android:id="@+id/aperson_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_53">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="用户昵称"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"/>

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_999"
                android:textSize="@dimen/sp_14"
                android:maxEms="5"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/dp_14"
                android:text="伴小米"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f0f0f0"
            android:layout_marginTop="@dimen/dp_106"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_14"/>

        <RelativeLayout
            android:id="@+id/aperson_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_107">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="性别"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"/>

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_17"
                android:text="保密"
                android:textColor="@color/c_999"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f0f0f0"
            android:layout_marginTop="@dimen/dp_159"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_14"/>

        <RelativeLayout
            android:id="@+id/aperson_sing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_160">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="个性签名"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"/>

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_999"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:text="四肢不全五体不勤"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_111"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_23"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_6"
        app:cardElevation="@dimen/dp_4">

        <RelativeLayout
            android:id="@+id/rl_updatePsw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="修改密码"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f0f0f0"
            android:layout_marginTop="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_14"/>

        <RelativeLayout
            android:id="@+id/rl_bindPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_56">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="绑定手机"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_28"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:background="@drawable/navig_head"
        android:text="退出登录"
       />
</LinearLayout>