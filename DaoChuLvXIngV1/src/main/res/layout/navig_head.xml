<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/home_headLinear"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_12"
        >
        <ImageView
            android:id="@+id/head_touxiang"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@mipmap/zhanweitu_home_kapian_hdpi"
            />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="林小姐"
              android:id="@+id/head_name"
              android:textColor="@color/c_333333"
              android:textSize="@dimen/sp_22"
              android:layout_marginLeft="@dimen/dp_11"

              />
          <TextView
              android:id="@+id/head_desc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="四体不勤五谷不分人懒嘴馋花痴健忘"
              android:layout_marginLeft="@dimen/dp_11"
              android:textColor="@color/c_999"
              android:layout_marginTop="@dimen/dp_8"
              />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >

               <TextView
                   android:drawablePadding="@dimen/dp_5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="编辑"
                   android:textColor="@color/c_fa6a13"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginLeft="@dimen/dp_220"
                   android:layout_marginRight="@dimen/dp_21"
                   />
           </LinearLayout>
      </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_122"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/navig_head"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的钱包"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textSize="@dimen/sp_58"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:id="@+id/head_price"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/head_price"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赢取奖金"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_25"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/dp_3"
            android:drawableRight="@mipmap/little_right_arrow"
            />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_212"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:cardElevation="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_19"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/icon_me_kaquan"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_20"
                android:id="@+id/image_kaquan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的卡券"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"
                android:layout_toRightOf="@+id/image_kaquan"
                />
            <View
                android:layout_marginTop="@dimen/dp_18"
                android:layout_below="@+id/image_kaquan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#f0f0f0"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@mipmap/big_arrow_right"
                android:layout_marginLeft="@dimen/dp_174"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:backgroundTint="#000"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_104"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/icon_me_shoucang"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_20"
                android:id="@+id/image_shoucang"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"
                android:layout_toRightOf="@+id/image_shoucang"
                />
            <View
                android:layout_marginTop="@dimen/dp_18"
                android:layout_below="@+id/image_shoucang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#f0f0f0"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@mipmap/big_arrow_right"
                android:layout_marginLeft="@dimen/dp_174"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:backgroundTint="#000"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_52"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/icon_me_yigou"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_20"
                android:id="@+id/image_xingcheng"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已购行程"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"
                android:layout_toRightOf="@+id/image_xingcheng"
                />
            <View
                android:layout_marginTop="@dimen/dp_18"
                android:layout_below="@+id/image_xingcheng"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#f0f0f0"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@mipmap/big_arrow_right"
                android:layout_marginLeft="@dimen/dp_174"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:backgroundTint="#000"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_156"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/icon_me_guanzhu"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_20"
                android:id="@+id/image_guanzhu"
                />
            <TextView
                android:id="@+id/navig_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"
                android:layout_toRightOf="@+id/image_guanzhu"
                />
            <View
                android:layout_marginTop="@dimen/dp_18"
                android:layout_below="@+id/image_guanzhu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#f0f0f0"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@mipmap/big_arrow_right"
                android:layout_marginLeft="@dimen/dp_174"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:backgroundTint="#000"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_marginTop="@dimen/dp_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@drawable/icon_me_kefu"
                />

            <TextView
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系客服"
                android:textColor="@color/c_333333"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            >
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@drawable/icon_me_fankui"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textColor="@color/c_333333"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            >
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@drawable/icon_me_banben"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本检测"
                android:id="@+id/head_banben"
                android:textColor="@color/c_333333"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>