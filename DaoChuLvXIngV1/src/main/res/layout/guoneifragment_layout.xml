                android:textSize="@dimen/sp_20"
                android:layout_toRightOf="@+id/remen1"
                android:layout_margin="@dimen/dp_5"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:id="@+id/remenB"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/position_icon"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_3"
                android:id="@+id/remen2"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="北京"
                android:textSize="@dimen/sp_20"
                android:layout_toRightOf="@+id/remen2"
                android:layout_margin="@dimen/dp_5"
                android:id="@+id/remena"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remenC"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/position_icon"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_3"
                android:id="@+id/remen3"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_width="wrap_content"
