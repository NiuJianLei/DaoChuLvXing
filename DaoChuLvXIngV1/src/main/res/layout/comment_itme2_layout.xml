<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/author_ll"
            >
            <ImageView
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:id="@+id/author_photo"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_21"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/author_name"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/c_373737"
                    android:text="作者name"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_25"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/author_zhiye"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/c_636363"
                    android:text="职业"
                    android:layout_marginLeft="@dimen/dp_27"
                    android:layout_marginTop="@dimen/dp_2"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_12"
            android:id="@+id/author_dizhi"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author_desc"
            android:layout_below="@+id/author_ll"
            android:text="132"
            android:layout_margin="@dimen/dp_20"
            />

    </RelativeLayout>

</LinearLayout>
