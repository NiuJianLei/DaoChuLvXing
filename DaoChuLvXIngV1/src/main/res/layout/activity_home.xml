<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homepage_drawer"
    tools:context=".activity.HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:layout_width="375dp"
            android:layout_height="@dimen/dp_72"
            android:background="@color/c_fefefe"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/home_toolbar"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:src="@mipmap/wechat"
                    android:id="@+id/touxiang"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_22"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/message"
                    android:layout_marginTop="@dimen/dp_28"
                    android:id="@+id/message"
                    android:layout_marginLeft="@dimen/dp_277"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/c_999"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/home_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            app:tabTextColor="@color/c_cecece"
            app:tabSelectedTextColor="@color/orange"
            android:background="#ccf5f5f5"
            android:id="@+id/home_tab"
            />

    </LinearLayout>

        <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/homepage_navig"
            android:background="@color/white"
            app:headerLayout="@layout/navig_head"
            android:layout_gravity="left"
            app:menu="@menu/mymenu"
            />

</android.support.v4.widget.DrawerLayout>