<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <TextView
        android:layout_width="@dimen/dp_201"
        android:layout_height="@dimen/dp_21"
        android:text="你好，为了获取更好的服务"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_73"
        android:textColor="#FA6A13"
        android:textSize="@dimen/sp_16"
        />

    <TextView
        android:layout_width="@dimen/dp_198"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_23"
        android:text="请登录伴米旅行"
        android:textSize="@dimen/dp_27"
        android:textColor="#373737"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_137">

        <EditText
            android:layout_marginRight="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:id="@+id/et_phone"
            android:paddingStart="@dimen/dp_90" />


        <ImageView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/phone" />

        <TextView
            android:id="@+id/baliu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@+id/phone"
            android:drawableRight="@mipmap/select"
            android:text="+86" />

        <Button
            android:id="@+id/yanzheng"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@mipmap/button_unavailable"
            android:text="发送验证码"
            android:textColor="#FEFEFE"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_80"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
    <!--   <View
           android:layout_width="@dimen/dp_8"
           android:layout_height="@dimen/dp_1"
            android:background="@drawable/xixian"
           android:layout_marginTop="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_3"
           />-->

            <TextView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_20"
                android:text="or"
                android:textColor="#A9A9A9"
                android:layout_gravity="center_horizontal"
                />
           <!-- <View
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_1"
                android:background="@drawable/xixian_yout"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_3"
                />-->

        </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          >
          <ImageView
              android:layout_width="@dimen/dp_50"
              android:layout_height="@dimen/dp_50"
              android:src="@drawable/umeng_socialize_qq"
              android:id="@+id/umeng_qq"
              android:layout_marginRight="@dimen/dp_10"
              />

          <ImageView
              android:layout_width="@dimen/dp_50"
              android:layout_height="@dimen/dp_50"
              android:src="@drawable/umeng_socialize_sina"
              android:id="@+id/umeng_weibo"
              />

      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:id="@+id/tv_treaty"
            android:layout_marginTop="@dimen/sp_15"
            android:textSize="@dimen/sp_13"
            />
    </LinearLayout>
</LinearLayout>