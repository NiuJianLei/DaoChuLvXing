<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_18"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东京"
            android:id="@+id/xiang_dizhi"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_13"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/c_999"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银座"
            android:layout_below="@+id/xiang_dizhi"
            android:id="@+id/xiang_title"
            android:textColor="@color/c_373737"
            android:textSize="@dimen/sp_26"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_13"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="疯狂购物买买买"
            android:id="@+id/xiang_desc"
            android:layout_below="@+id/xiang_title"
            android:layout_marginLeft="@dimen/dp_13"
            android:textColor="#636363"
            android:textSize="@dimen/sp_18"
            />

        <ImageView
            android:layout_marginTop="@dimen/dp_43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_white"
            android:id="@+id/xiang_back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_27"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_383"
            android:layout_below="@+id/xiang_desc"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/dp_15"
            android:scaleType="fitXY"
            android:id="@+id/xiang_image"
            android:src="@drawable/ic_launcher_background" />
    </RelativeLayout>


</LinearLayout>
